<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fynocore.view.fragments.ppsb.FynocorePPSBMenuFragment"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo_fynocore_ppsb" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/fragment_fynocore_menu_panel_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/panel_ppsb"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_fynocore_panel_terminations_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fynocore_ppsb_menu_items_background"
            app:layout_constraintCircle="@id/fragment_fynocore_menu_panel_image"
            app:layout_constraintCircleAngle="45"
            app:layout_constraintCircleRadius="@dimen/fynocore_fragment_panel_termination_radius"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/roboto_light"
                android:text="Acabados de panel "
                android:textColor="@color/fynocore_menu_text"
                android:textSize="@dimen/fynocore_fragment_items_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_fynocore_pp_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fynocore_ppsb_menu_items_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintCircle="@id/fragment_fynocore_menu_panel_image"
            app:layout_constraintCircleAngle="110"
            app:layout_constraintCircleRadius="@dimen/fynocore_fragment_pp_radius"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/roboto_light"
                android:text="Fynocore PPSB "
                android:textColor="@color/fynocore_menu_text"
                android:textSize="@dimen/fynocore_fragment_items_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_fynocore_aplications_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fynocore_ppsb_menu_items_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintCircle="@id/fragment_fynocore_menu_panel_image"
            app:layout_constraintCircleAngle="230"
            app:layout_constraintCircleRadius="@dimen/fynocore_fragment_applications_termination_radius"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/roboto_light"
                android:text="Aplicaciones "
                android:textColor="@color/fynocore_menu_text"
                android:textSize="@dimen/fynocore_fragment_items_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:src="@drawable/f_fynocore"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>